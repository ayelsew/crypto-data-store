{
    "compilerOptions": {
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "module": "CommonJS",
        "target": "es6",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@root/*": [
                "*"
            ],
            "@root": [
                "."
            ],
            "@interfaces/*": [
                "interfaces/*"
            ],
            "@interfaces": [
                "interfaces"
            ]
        },
        "outDir": "dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}