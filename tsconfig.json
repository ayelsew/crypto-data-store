{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}